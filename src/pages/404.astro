---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import error from '../images/error-404.png';
---

<Layout title='404 - Page not Found'>
  <div class='flex flex-col items-center justify-center h-screen gap-7'>
    <Image src={error} alt='error' class='mt-10' height={250} width={250} />
    <h1 class='text-5xl'>Page Not Found</h1>
    <p class='text-2xl mb-10'>Sorry we couldn't find it</p>
    <a
      href='/'
      class='inline-block mb-6 p-2 bg-gray-100 hover:bg-indigo-500 hover:text-white'
      >Go back home</a
    >
  </div>
</Layout>
